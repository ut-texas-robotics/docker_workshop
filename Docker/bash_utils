compose() {
    # docker-compose wrapper
    docker compose -p ${USER}_project -f $ROSD_DIRECTORY/Docker/docker-compose.yaml $@
}

rosd-start(){
    #add xhost permissions for docker to use display
    xhost +local:docker
    echo "added docker xhost permissions"
    # start the container in the background
    compose up -d
}

rosd-stop(){
    # stop the container and remove it
    compose down
}

rosd-shell() {
    # open a shell in the container
    docker exec -ti ${USER}_rosd_c bash -l
}

rosd-build() {
    # if the container is running, stop it
    if [ "$(docker ps -q -f name=${USER}_rosd_c)" ]; then
        echo "stopping container ${USER}_rosd_c..."
        compose down
    fi
    # build the container from the docker-compose file
    compose build
}

rosd-dir() {
    # Set the directory of the docker_workshop repo on the host
	# Usage: rosd-dir path_to_rosd_docker_dir
	# Alternatively, add it to your .bashrc for convenience
    export ROSD_DIRECTORY=$1
}

rosd-log() {
    # view the logs of the picogk container
    docker logs ${USER}_rosd_c
}